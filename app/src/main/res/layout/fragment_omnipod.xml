<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardColorBackground"
    tools:context=".plugins.pump.omnipod.OmnipodFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewOmnipyConnection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="@string/omnipy_connection_status"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <TextView
                android:id="@+id/omnipy_txt_connection_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:id="@+id/omnipy_btn_check_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check RileyLink" />

                <Button
                    android:id="@+id/omnipy_btn_check_connection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Connection" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/omnipy_btn_shutdown_remote_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shutdown" />

                <Button
                    android:id="@+id/omnipy_btn_restart_remote_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restart" />

            </LinearLayout>

            <TextView
                android:id="@+id/textviewPodStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="@string/omnipod_pod_status"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <TextView
                android:id="@+id/omnipy_txt_pod_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/omnipy_btn_clear_alerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/omnipy_cmd_clear_alerts"/>

                <Button
                    android:id="@+id/omnipy_btn_update_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/omnipod_cmd_update_status"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textviewActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="@string/omnipod_pod_actions"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/omnipy_btn_deactivate_pod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/omnipod_cmd_deactivate_pod"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textviewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:text="Pod Registration"
                android:textAppearance="@android:style/TextAppearance.Material.Large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lot number:" />

                <EditText
                    android:id="@+id/omnipy_txt_lot_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Serial number:" />

                <EditText
                    android:id="@+id/omnipy_txt_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Radio address:" />

                <EditText
                    android:id="@+id/omnipy_txt_radio_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:enabled="false"/>

            </LinearLayout>
            <CheckBox
                android:id="@+id/omnipy_chk_read_pdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Determine radio address by listening to the PDM"
                android:checked="true"
                android:visibility="gone"/>

            <Button
                android:id="@+id/omnipy_btn_register_pod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Pod" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>