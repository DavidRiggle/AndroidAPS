<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/omnipy_connection_settings">
        <SwitchPreference
            android:defaultValue="1"
            android:title="@string/omnipy_auto_detect_host"
            android:key="omnipy_autodetect_host"
            />
        <EditTextPreference
            android:title="@string/omnipy_host_ip"
            android:enabled="false"
            android:key="omnipy_address"
            />
        <EditTextPreference
            android:title="@string/omnipy_set_http_password"
            android:key="omnipy_password"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/omnipod_notification_Settings">
        <SwitchPreference
            android:defaultValue="1"
            android:title="@string/omnipy_bolus_alerts"
            android:key="omnipod_bolus_notify"
            />
        <SwitchPreference
            android:defaultValue="1"
            android:title="@string/omnipod_temp_basal_alerts"
            android:key="omnipod_tempbasal_notify"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/omnipod_safety_limits">
        <EditTextPreference
            android:title="@string/omniod_max_bolus"
            android:key="omnipod_max_bolus"
            />
        <EditTextPreference
            android:title="@string/omniod_max_temp_basal"
            android:key="omnipod_tempbasal_notify"
            />
    </PreferenceCategory>
</PreferenceScreen>